@model EksperciOnline.Models.ViewModels.AddCategoryRequest
@{
    ViewData["Title"] = "Dodaj Kategorie";
}

<div class="bg-light py-2">
    <div class="container">
        <h1>Dodaj nową kategorię</h1>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Nazwa kategorii</label>
                            <input type="text" class="form-control" id="nazwa-kategorii" placeholder="Wprowadź nazwę kategorii" asp-for="NazwaKategorii">
                        </div>
                        <div class="form-group">
                            <label>URL zdjęcia</label>
                            <input type="text" class="form-control" id="url-zdjecia" placeholder="Wprowadź URL zdjęcia" asp-for="UrlZdjęcia">
                        </div>
                        <button type="submit" class="btn btn-primary my-3">Wyślij</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>