@model EksperciOnline.Models.Domain.Usługa
@{
    ViewData["Title"] = Model.Tytuł;
}

<style>
    .baner {
        position: relative;
        width: 100%;
        height: 300px;
        background: no-repeat center;
        background-size: cover;
    }

    .zdjęcie {
        position: absolute;
        bottom: 50px;
        left: 20%;
        transform: translateX(-50%);
        width: 200px;
        height: 200px;
        border-radius: 50%;
        border: 5px solid white;
    }
</style>

<div class="container mt-5 bg-light py-4">
    @if (Model != null)
    {
        <div class="row justify-content-center">

            <div class="col-md-10">

                <div class=" mt-5 row">
                    <div class="col-md-8">
                        <h2>@Model.Tytuł</h2>
                        <span class="badge bg-info">@Model.Kategoria.NazwaKategorii</span>
                    </div>
                </div>

                

                <div class="container my-4">
                    <div class="baner" id="banerShow" style="background-image: url(@Model.UrlBaneru);">
                        <div class="row">

                            <div class="col-md-7">
                                <img src="@Model.UrlZdjęcia" class="zdjęcie" id="zdjęcieShow">
                            </div>

                            <div class="col-md-4 bg-black bg-opacity-75 my-2 text-center">
                                <h3 class="my-2">@Model.CenaOd - @Model.CenaDo PLN</h3>

                                <a class="btn btn-info mb-2" asp-area="" asp-controller="Messege" asp-action="List">Napisz do mnie</a><br />

                                <label class="mb-2">Lub zadzwoń do mnie</label>

                                <h4>@Model.NrTelefonu</h4>

                                <label class="mb-2">Usługodawca</label>

                                <h4>@Model.Autor</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <p><strong>Data Publikacji: </strong>@Model.DataPulikacji.ToShortDateString()</p>

                    <p><strong>Ocena: </strong>4.5 / 5</p>
                </div>

                <div class="blog-details-content">
                    <strong>Opis: </strong>@Html.Raw(@Model.Opis)
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-10">
                <h3>Komentarze</h3>
                <div class="mb-3">
                    <form>
                        <div class="mb-3">
                            <label for="komentarz" class="form-label">Komentarz</label>
                            <textarea class="form-control" id="komentarz" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="ocena" class="form-label">Ocena (od 1 do 5)</label>
                            <input type="number" class="form-control" id="ocena" min="1" max="5" required>
                        </div>
                        <button type="submit" class="btn btn-info">Dodaj komentarz</button>
                    </form>
                </div>

                <div class="mt-4">
                    <h4>Lista komentarzy</h4>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Imię Nazwisko</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                            <p class="card-text"><small class="text-muted">Data: 25 czerwca 2024</small></p>
                            <p class="card-text"><small class="text-muted">Ocena: 4</small></p>
                        </div>
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Inny Użytkownik</h5>
                            <p class="card-text">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                            <p class="card-text"><small class="text-muted">Data: 26 czerwca 2024</small></p>
                            <p class="card-text"><small class="text-muted">Ocena: 5</small></p>
                        </div>
                    </div>
                    <!-- Tutaj można dodać więcej komentarzy w podobny sposób -->
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Nie znaleziono usługi</p>
    }
</div>
