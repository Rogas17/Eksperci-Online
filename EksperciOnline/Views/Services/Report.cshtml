@model EksperciOnline.Models.ViewModels.ZgłoszenieViewModel
@{
    ViewData["Title"] = "Zgłoś usługę";
}

<div class="container d-flex justify-content-center min-vh-100">
    <div class="bg-light p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center pt-5 mb-5">Formularz Zgłoszeniowy</h2>
        <form asp-action="Report" asp-controller="Services" method="post">
            <div class="form-group mb-3">
                <label for="Powód">Powód</label>
                <input asp-for="Powód" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label for="Opis">Opis</label>
                <textarea asp-for="Opis" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-danger">Zgłoś</button>
        </form>
    </div>
</div>