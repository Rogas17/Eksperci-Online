@model List<EksperciOnline.Models.Domain.Kategoria>
@{
    ViewData["Title"] = "Strona Główna";
}

<style>
    .img-wrapper {
        text-align: center; 
        padding: 10px; 
    }

    img {
        width: 150px;
        height: 150px;
        border-radius: 50%; 
    }
</style>

<div class="container my-3 py-2">
    <div class="row justify-content-center my-4">
        <div class="card bg-light py-3 col-12 col-md-8 text-center">
            <h2 class="fw-bold lh-1 mb-3">Wyszukaj usługi</h2>
            <form method="get" asp-controller="Services" asp-action="List">
                <div class="input-group">
                    <input class="form-control form-control-lg" type="text" placeholder="Szukaj" name="searchQuery" value="@ViewBag.SearchQuery">
                    <input class="form-control form-control-lg" type="text" placeholder="Lokalizacja" name="searchLocalQuery" style="max-width: 200px;" value="@ViewBag.SearchLocalQuery">
                    <button class="btn btn-info btn-lg" type="submit">Szukaj <i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="bg-light">
    <div class="container my-3 py-5">
        <h2 class="fw-bold lh-1 mb-3 text-center">Kategorie</h2>
        <div class="row justify-content-center py-2">
            @if (Model != null && Model.Any())
            {
                @foreach (var kategoria in Model)
                {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2 img-wrapper">
                        <a asp-area="" asp-controller="Services" asp-action="List" asp-route-kategoriaId="@kategoria.Id">
                            <img class="mb-1" src="@kategoria.UrlZdjęcia" />
                            <span class="badge bg-info">@kategoria.NazwaKategorii</span>
                        </a>
                    </div>
                }
            }
            else
            {
                <p>Brak Kategorii</p>
            }
        </div>
    </div>
</div>
