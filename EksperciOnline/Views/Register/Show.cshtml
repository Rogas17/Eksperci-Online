@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container d-flex justify-content-center min-vh-100">
    <div class="bg-light p-4" style="max-width: 500px; width: 100%;">

        <h2 class="text-center pt-5 mb-5">Rejestracja</h2>
        <form>
            <div class="form-row row mb-2">
                <div class="form-group col-md-6">
                    <label for="firstName">Imię</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Wprowadź imię">
                </div>
                <div class="form-group col-md-6">
                    <label for="lastName">Nazwisko</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Wprowadź nazwisko">
                </div>
            </div>
            <div class="form-group mb-2">
                <label for="username">Nazwa Użytkownika</label>
                <input type="text" class="form-control" id="username" placeholder="Wprowadź nazwę użytkownika">
            </div>
            <div class="form-group mb-2">
                <label for="phoneNumber">Numer Telefonu</label>
                <input type="text" class="form-control" id="phoneNumber" placeholder="Wprowadź numer telefonu">
            </div>
            <div class="form-group mb-2">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Wprowadź email">
            </div>
            <div class="form-group mb-2">
                <label for="password">Hasło</label>
                <input type="password" class="form-control" id="password" placeholder="Wprowadź hasło">
            </div>
            <div class="form-group mb-4">
                <label for="confirmPassword">Powtórz hasło</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Powtórz hasło">
            </div>
            <button type="submit" class="btn btn-info btn-block">Zarejestruj się</button>
        </form>
    </div>
</div>

