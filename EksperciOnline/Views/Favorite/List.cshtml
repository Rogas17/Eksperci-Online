@{
    ViewData["Title"] = "Ulubione";
}

<style>
    .rating {
        color: #ffdd00;
    }

    .avatar {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        border: 5px solid white;
    }
</style>

<div class="container my-3 py-2">
    <div class="row justify-content-center my-4">
        <div class="card bg-light py-3 col-12 col-md-8 text-center">
            <h2 class="fw-bold lh-1 mb-3">Wyszukaj ulubionej usługi</h2>
            <form class="d-flex justify-content-center">
                <div class="input-group">
                    <input class="form-control form-control-lg" type="text" placeholder="Szukaj" aria-label="Szukaj">
                    <button class="btn btn-info btn-lg" type="submit">Szukaj <i class="bi bi-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @for (int i = 1; i <= 4; i++)
        {
            <div class="container bg-light p-3 mb-3 rounded-3">
                <div class="row">
                    <div class="col-md-2 text-center">
                        <img src="https://via.placeholder.com/100" class="avatar" style="height: 150px; width: 150px;" alt="Placeholder Image">
                        <p class="rating">★★★★★<br />(256 votes)</p>
                    </div>
                    <div class="col-md-7">
                        <h4>Naprawa Laptopów, Poznań</h4>
                        <span class="badge bg-info">Informatyk</span>
                        <p>Naprawiam laptopy wszelkiej marki...</p>
                        <label>Usługodawca:</label>
                        <p>Adam Adam</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <label>Cena</label>
                        <h4 class="fw-bold">500 - 800 PLN</h4>
                        <label>Numer Telefonu</label>
                        <h4>123456789</h4>
                        <label>lub napisz do mnie</label><br />
                        <a class="btn btn-info mt-3" asp-area="" asp-controller="Messege" asp-action="List">Napisz <i class="bi bi-chat"></i></a>
                    </div>
                </div>
                <a class="btn btn-info" asp-area="" asp-controller="Services" asp-action="Show">Zobacz więcej <i class="bi bi-chevron-right"></i></a>
            </div>
        }
        

    </div>
</div>