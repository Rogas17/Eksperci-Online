@model EksperciOnline.Models.ViewModels.EditAccountViewModel
@{
    ViewData["Title"] = "Edytuj Profil";
}

<div class="container d-flex justify-content-center min-vh-100">
    <div class="bg-light p-4" style="max-width: 500px; width: 100%;">

        <h2 class="text-center pt-5 mb-5">Edytuj Profil</h2>
        <form method="post">
            <div class="form-group">
                <label>Nazwa Użytkownika</label>
                <input asp-for="Username" class="form-control mb-3" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control mb-3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info">Zapisz zmiany</button>
        </form>
    </div>
</div>