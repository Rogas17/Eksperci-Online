@model EksperciOnline.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container d-flex justify-content-center min-vh-100">
    <div class="bg-light p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center pt-5 mb-5">Rejestracja</h2>
        <form method="post">
            <div class="form-group mb-2">
                <label>Nazwa Użytkownika*</label>
                <input type="text" class="form-control" id="nazwaUżytkownika" placeholder="Wprowadź nazwę użytkownika" asp-for="Username" required />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="form-group mb-2">
                <label>Numer Telefonu</label>
                <input type="text" class="form-control" id="nrTelefonu" placeholder="Wprowadź numer telefonu" asp-for="PhoneNumber" minlength="9" maxlength="9">
            </div>

            <div class="form-group mb-2">
                <label>Email*</label>
                <input type="email" class="form-control" id="email" placeholder="Wprowadź email" asp-for="Email" required />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-2">
                <label>Hasło*</label>
                <input type="password" class="form-control" id="hasło" placeholder="Wprowadź hasło" asp-for="Password" required minlength="6" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group mb-4">
                <label>Powtórz hasło*</label>
                <input type="password" class="form-control" id="powtórzHasło" placeholder="Powtórz hasło" required />
            </div>

            <button type="submit" class="btn btn-info btn-block">Zarejestruj się</button>
        </form>
    </div>
</div>

