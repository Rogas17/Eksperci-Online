@model EksperciOnline.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container d-flex justify-content-center min-vh-100">
    <div class="bg-light p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center pt-5 mb-5">Rejestracja</h2>
        <form method="post">
            <div class="form-group mb-2">
                <label>Nazwa Użytkownika</label>
                <input type="text" class="form-control" id="nazwaUżytkownika" placeholder="Wprowadź nazwę użytkownika" asp-for="Username">
            </div>

            <div class="form-group mb-2">
                <label>Numer Telefonu</label>
                <input type="text" class="form-control" id="nrTelefonu" placeholder="Wprowadź numer telefonu" asp-for="PhoneNumber">
            </div>

            <div class="form-group mb-2">
                <label>Email</label>
                <input type="email" class="form-control" id="email" placeholder="Wprowadź email" asp-for="Email">
            </div>

            <div class="form-group mb-2">
                <label>Hasło</label>
                <input type="password" class="form-control" id="hasło" placeholder="Wprowadź hasło" asp-for="Password">
            </div>

            <div class="form-group mb-4">
                <label>Powtórz hasło</label>
                <input type="password" class="form-control" id="powtórzHasło" placeholder="Powtórz hasło">
            </div>

            <button type="submit" class="btn btn-info btn-block">Zarejestruj się</button>
        </form>
    </div>
</div>

