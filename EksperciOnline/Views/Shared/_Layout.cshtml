<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EksperciOnline</title>
    <link rel="stylesheet" href="~/css/cyborg.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EksperciOnline.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-image: url('https://i.ibb.co/xG82Z50/baner.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
        }

        .message-container::-webkit-scrollbar,
        .user-list::-webkit-scrollbar {
            width: 12px;
        }

        .message-container::-webkit-scrollbar-track,
        .user-list::-webkit-scrollbar-track {
            background: #2c2c2c;
        }

        .message-container::-webkit-scrollbar-thumb,
        .user-list::-webkit-scrollbar-thumb {
            background: #9933cc;
            border-radius: 6px;
            border: 2px solid #2c2c2c;
        }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-info" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eksperci Online</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item me-2">
                            <a class="btn btn-info" asp-area="" asp-controller="Services" asp-action="List">Oferty</a>
                        </li>
                        <li class="nav-item">
                        <li class="nav-item me-2">
                            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop3" type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Funkcje Admina</button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop3">
                                        <a class="dropdown-item" asp-area="" asp-controller="AdminCategories" asp-action="List">Kategorie</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="btn btn-info" asp-area="" asp-controller="Messege" asp-action="List"><i class="bi bi-chat"></i> Wiadomości</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-info" asp-area="" asp-controller="Favorite" asp-action="List"><i class="bi bi-heart"></i> Ulubione</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-info" asp-area="" asp-controller="Profile" asp-action="List"><i class="bi bi-person-circle"></i> Profil</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-light" asp-area="" asp-controller="Login" asp-action="Show">Zaloguj się</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="btn btn-info" asp-area="" asp-controller="Register" asp-action="Show"><i class="bi bi-person-add"></i> Zarejestruj się</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light footer text-muted">
        <div class="container">
            &copy; 2024 - EksperciOnline - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
